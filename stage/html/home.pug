- var pagename = 'Store - Home '
<! DOCTYPE html >
html 
  head
    include pug/layouts/_head
    title #{pagename}
  body 
    .store
        // navbar home 
        include pug/components/_navbarhome
        // show Stores 
        .container-fuild.p-5
          .row
            .col-lg-4
              .banner.card.border-0.mb-3.mt-2
                .cover
                  img(src="imgs/products/men/02.jpg")
                .info 
                  h2 Woman Fasgion and kids 
                  a(href="#").btn.btn-light.btn-sm Show
            .col-lg-8
              .banner.card.border-0.mb-3.mt-2
                .cover
                  img(src="imgs/products/men/01.jpg")
                .info 
                  h2 More Control 
                  a(href="#").btn.btn-light.btn-sm Show
            .col-lg-12
              .banner.card.border-0.mb-3.mt-2
                .cover
                  img(src="imgs/products/men/03.jpg")
                .info 
                  h2 More Control 
                  a(href="#").btn.btn-light.btn-sm Show
                  
        

    // All menu Modals 
    include pug/components/menu/_linkone        
    // btn show your products on cart 
    .show-cart 
      i.fas.fa-shopping-bag 
    // sidebar shopping cart 
    include pug/components/_sidebarcart  
    // loading 
    include pug/components/loading  
    // footer 
    include pug/layouts/_footer